<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/day"
    android:layout_width="match_parent"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16sp"
    android:layout_height="160dp">


    <ImageView
        android:id="@+id/backk"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/afte"
        android:layout_height="match_parent" />
    <ImageView
        android:src="@drawable/top_start"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="@id/backk"
        app:layout_constraintStart_toStartOf="@id/backk"/>
    <ImageView
        android:src="@drawable/top_end"
        android:paddingEnd="-2dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="@id/backk"
        app:layout_constraintEnd_toEndOf="@id/backk"/>
    <ImageView
        android:src="@drawable/buttom_start"
        android:layout_width="80dp"
        android:paddingEnd="-2dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="@id/backk"
        app:layout_constraintBottom_toBottomOf="@id/backk"/>
    <ImageView
        android:src="@drawable/buttom_end"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="@id/backk"
        app:layout_constraintStart_toStartOf="@id/backk"/>



    <LinearLayout
        app:layout_constraintTop_toTopOf="@id/backk"
        app:layout_constraintStart_toStartOf="@id/backk"
        android:id="@+id/morning"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingEnd="20dp">
            <TextView
                android:id="@+id/name"
                android:textColor="#E0E0E0"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="end"
                android:text="أذكار الصباح"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/chikh"
                android:textColor="#eee"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_gravity="end"
                android:text="أذكار الصباح"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <ImageView
            android:id="@+id/player"
            android:layout_marginEnd="20dp"
            android:layout_width="100dp"
            android:gravity="end"
            android:layout_gravity="center_vertical"
            android:layout_height="100dp"
            android:src="@drawable/ic_play"/>


   </LinearLayout>



</android.support.constraint.ConstraintLayout>

