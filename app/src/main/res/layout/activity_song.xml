<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:background="#e0e0e0"
    android:layout_height="match_parent">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:paddingStart="8dp"
        android:paddingEnd="16dp"
        android:background="@drawable/sh1"
    android:layout_height="65dp">
        <ImageView
            android:onClick="toback"
            android:id="@+id/back"
            android:layout_width="55dp"
            android:padding="8dp"
            android:src="@drawable/ic_to_back"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="اذكار مسموعه"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#616161"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec"
        android:layout_width="match_parent"
        android:layout_marginTop="61dp"
        android:paddingBottom="100dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/player"
        android:visibility="gone"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:background="@color/gray_blue_text"
        android:paddingEnd="6dp"
        android:paddingStart="16dp"
        android:layout_height="65dp">
        <ImageView
            android:id="@+id/pause"
            android:visibility="gone"
            android:src="@drawable/ic_pause_b"
            android:layout_width="45dp"
            android:layout_gravity="center"
            android:padding="12dp"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/play"
            android:src="@drawable/ic_play_button"
            android:layout_width="45dp"
            android:layout_gravity="center"
            android:padding="12dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/name_zeker"
            android:layout_width="0dp"
            android:textColor="#F5F5F5"
            android:maxLines="2"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical"
            android:text="أذكار الصباح والمساء"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/clear"
            android:src="@drawable/ic_clear"
            android:padding="10dp"
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:layout_height="50dp" />
    </LinearLayout>


    <ProgressBar
        android:id="@+id/pr"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        android:visibility="gone"
        android:id="@+id/connection"
        android:layout_marginBottom="70dp"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/wi"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_smartphone" />

        <TextView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:text="No Connection"
            android:textSize="18sp"
            android:textColor="#616161"
            app:layout_constraintStart_toStartOf="@id/wi"
            app:layout_constraintEnd_toEndOf="@id/wi"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/wi"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="RETRY"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/restart"
            android:textColor="@color/cl"
            app:layout_constraintStart_toStartOf="@id/wi"
            app:layout_constraintEnd_toEndOf="@id/wi"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/msg"
            android:layout_height="wrap_content" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
</layout>