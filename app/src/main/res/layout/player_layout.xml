<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        tools:context=".PlayerAzkar"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

            <ImageView
                android:id="@+id/backg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/day"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/nam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="mehdi"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textColor="#FAFAFA"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/chik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textColor="@color/backColor"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/nam"
                app:layout_constraintStart_toStartOf="@+id/nam"
                app:layout_constraintTop_toBottomOf="@+id/nam" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="@+id/nam"
                app:layout_constraintTop_toTopOf="@+id/backg"
                app:srcCompat="@drawable/ic_playlist" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_margin="16dp"
                android:onClick="toback"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_to_back"
                tools:layout_editor_absoluteX="16dp" />

        </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEE"
        android:paddingTop="5dp"
        android:paddingBottom="16dp"
        >


        <SeekBar
            android:id="@+id/exo_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/b"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/gradient_sun"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/exo_progress" />

        <ImageView
            android:id="@+id/exo_play"
            android:onClick="pl"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="20dp"
            android:src="@drawable/ic_play_button"
            app:layout_constraintBottom_toBottomOf="@id/b"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/b" />

        <ImageView
            android:onClick="pa"
            android:id="@+id/exo_pause"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_pause_b"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="@id/b"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/b" />


        <ImageView
            android:id="@+id/exo_rew"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="20dp"
            android:src="@drawable/ic_rewind"
            app:layout_constraintBottom_toBottomOf="@+id/exo_play"
            app:layout_constraintEnd_toStartOf="@id/exo_play"
            app:layout_constraintTop_toTopOf="@+id/exo_play" />


        <ImageView
            android:id="@+id/exo_ffwd"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="20dp"
            android:src="@drawable/ic_fast_forward"
            app:layout_constraintBottom_toBottomOf="@+id/exo_play"
            app:layout_constraintStart_toEndOf="@id/exo_play"
            app:layout_constraintTop_toTopOf="@+id/exo_play" />

        <TextView
            android:id="@+id/exo_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:02"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/exo_rew"
            app:layout_constraintEnd_toStartOf="@+id/exo_rew"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/exo_rew" />

        <TextView
            android:id="@+id/exo_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05:00"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/exo_ffwd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/exo_ffwd"
            app:layout_constraintTop_toTopOf="@+id/exo_ffwd" />


    </android.support.constraint.ConstraintLayout>


</LinearLayout>
</layout>
