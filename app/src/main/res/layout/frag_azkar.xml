<?xml version="1.0" encoding="utf-8"?>
<layout>
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E0E0E0"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rec_azkar"
            android:paddingTop="107dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:gravity="end"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:id="@+id/header"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="60dp"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_to_back"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/tex"
                android:textColor="#616161"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="end"
                android:text="أذكار مكتوبة"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingBottom="15dp"
            android:paddingTop="5dp"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/sh1"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <View
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/grandient_sunset"/>
                <View
                    android:id="@+id/vm"
                    android:layout_marginEnd="13dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"
                    android:visibility="gone"
                    android:layout_marginBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_sunrise"/>

                <TextView
                    android:id="@+id/tm"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="الصباح"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <View
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/grandient_sunset"/>
                <View
                    android:id="@+id/va"
                    android:layout_marginEnd="13dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_sunrise"/>

                <TextView
                    android:id="@+id/ta"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="المساء"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <View
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/grandient_sunset"/>
                <View
                    android:id="@+id/vd"
                    android:layout_marginEnd="13dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_sunrise"/>

                <TextView
                    android:id="@+id/td"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="اليوم"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </LinearLayout>

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/pr"
            android:layout_width="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="30dp" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_marginTop="120dp"
            android:id="@+id/connection"
            android:visibility="gone"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/wi"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_smartphone" />

            <TextView
                android:id="@+id/msg"
                android:layout_width="wrap_content"
                android:text="No Connection"
                android:textSize="18sp"
                android:textColor="#616161"
                app:layout_constraintStart_toStartOf="@id/wi"
                app:layout_constraintEnd_toEndOf="@id/wi"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/wi"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="RETRY"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/restart"
                android:textColor="@color/cl"
                app:layout_constraintStart_toStartOf="@id/wi"
                app:layout_constraintEnd_toEndOf="@id/wi"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/msg"
                android:layout_height="wrap_content" />

        </android.support.constraint.ConstraintLayout>


    </android.support.constraint.ConstraintLayout>
</layout>